<form action="{URL}" method="post">
<h1>{CONFIRM_HEADER}</h1>
<p>{CONFIRM_EXPLAIN}</p>
<table width="100%" cellpadding="3" cellspacing="1" border="0" class="forumline">
	<tr>
		<th height="25" class="thHead" nowrap="nowrap" colspan="2">{CONFIRM_SELECTION_TYPE}</th>
	</tr>
		<td class="row1" width="50%" align="left"><span class="gen"><b><u>{HARDCODE}</u></b></span>
		<p>{HARDCODE_EXPLAIN}</p></td>
		<td class="row2" width="50%" align="center" valign="middle"><span class="gen"><input class="post" type="text" style="width: 25px" maxlength="2" size="11" name="no_templ" /></span></td>
	</tr>
	<tr>
		<td class="row1" width="50%" align="left"><span class="gen"><b><u>{TEMPL}</u></b></span>
		<p>{TEMPL_EXPLAIN}</p></td>
		<td class="row2" width="50%" align="center" valign="middle"><span class="gen"><select name="use_templ">{TEMPL_SELECT}</span></td>
	</tr>
	<tr>
		<td class="row1" width="50%" align="left"><span class="gen"><b><u>{DEF_ODDS}</u></b></span>
		<p>{DEF_ODDS_EXPLAIN}</p></td>
		<td class="row2" width="50%" align="center" valign="middle"><span class="gen">{DEF_ODDS_INPUT}</span></td>
	</tr>
	<tr>
		<td class="catbottom" align="center" valign="middle" colspan="2"><input type="submit" name="build" value="{SUBMIT}" class="mainoption" /></td>
	</tr>
</table>
</form>
